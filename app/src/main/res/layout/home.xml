<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/logotipo"
            android:paddingTop="40dp"
            android:src="@drawable/whoami_logo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:text="Como você está se sentindo agora?"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- android:text="@string/pergunta" -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_feliz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/feliz"
                    android:contentDescription="@string/feliz"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_feliz"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Feliz" />
                <!-- android:text="@string/feliz" -->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_bravo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/bravo"
                    android:contentDescription="@string/alegre"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_bravo"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Bravo" />

                <!-- android:text="@string/bravo" -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_animado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/animado"
                    android:contentDescription="@string/animado"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_animado"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Animado" />

                <!-- android:text="@string/animado" -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_sonolento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/sonolento"
                    android:contentDescription="@string/animado"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_sonolento"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Sonolento" />

                <!-- android:text="@string/sonolento" -->
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_triste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/triste"
                    android:contentDescription="@string/triste"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_triste"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Triste" />
                <!-- android:text="@string/triste" -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_frustrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/frustrado"
                    android:contentDescription="@string/irritado"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_frustrado"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Frustrado" />
                <!-- android:text="@string/frustrado" -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_entediado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/entediado"
                    android:contentDescription="@string/ansioso"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_entediado"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Entediado" />
                <!-- android:text="@string/entediado" -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/botao_relaxado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/relaxado"
                    android:contentDescription="@string/animado"
                    android:onClick="onClickEstadoEmocional"
                    android:padding="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/botao_relaxado"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:text="Relaxado" />
                <!--  android:text="@string/relaxado"-->
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/config"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/botao_configuracoes"
            android:text="Edite seu perfil"
            android:textColor="#FFFFFF" />
        
        <!--  android:text="@string/configuracoes-->
    </LinearLayout>

</ScrollView>